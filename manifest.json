{
  "manifest_version": 2,

  "name": "Qick Tab Switcher",
  "description": "",
  "version": "0.0.2",
  "icons": { "16": "icons/16.png",
             "48": "icons/48.png",
            "128": "icons/128.png" },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
 "commands": {
          "open_tabs_window": {
            "suggested_key": {
              "default": "Ctrl+I",
              "mac": "Command+I"
            },
            "description": "Toggle Quick Tab access window"
   		}
  }
}
